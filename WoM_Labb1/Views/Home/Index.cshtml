@model IEnumerable<WoM_Labb1.Models.Produkt>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Webshop</h1>
</div>

<table border="0">
    @{int i = 0; }
    @foreach (var item in Model)
    {
        if (i % 4 == 0)
        {
            <tr></tr>
        }
        i++;
        <td width="250" height="250" style="text-align:center">
            <div class="container">
                @if (item.productImage != null)
                {
                    <img src="data:image/jpg;base64, @Convert.ToBase64String(item.productImage)" width="175" , height="175" />
                }
                <br />
                <a href="https://localhost:5001/Home/Product?item=@item.Id"> @Html.DisplayFor(modelItem => item.productName) </a>
                <br /> <h6 style="font-size:12px"> @item.productDescription.ToString().Substring(0, 25)... </h6>
                @item.productPrice SEK
            </div>
        </td>
    }
</table>